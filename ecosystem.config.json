{
  "apps": [
    {
      "name": "app",
      "script": "src/index.js",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "time": true,
      "env": {
        "NODE_ENV": "production"
      },
      "log_file": "./logs/combined.log",
      "out_file": "./logs/output.log",
      "error_file": "./logs/error.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "pid_file": "./logs/app.pid"
    }
  ]
}